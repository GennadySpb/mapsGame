link() {
    color: blue;

    text-decoration: none;

    &:link,
    &:visited {
        color: blur;
    }

    &:hover {
        color: #f00;
    }
}

button() {
    font-family: textbook, "Helvetica Neue", Helvetica, Arial;

    padding: 0;
    margin: 0;

    border: none;
    background: none;

    text-decoration: none;
    white-space: nowrap;

    outline: none;

    &:focus {
        outline: none;
    }
}

island($bg = #fff) {
    border: 1px solid #e6e6e6;
    border-radius: 2px;
    background: $bg;

    box-sizing: border-box;
    padding: 12px;
}

disabled() {
    &_disabled {
        opacity: .4;
    }
}

