button_skin_pseudo($height) {
    position: relative;

    font-size: 22px;
    line-height: $height;

    padding: 0 14px;

    display: inline-block;
    vertical-align: middle;

    color: #202021;
    text-shadow: -1px 1px 1px #fff;

    background: #f6f5f3;
    border-radius: 5px;
    box-shadow: inset 0 0 1px 1px #f3f3f1;

    &:first-child {
        margin-left: 0;
    }
}
