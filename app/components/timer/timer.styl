.timer {
    font-size: 16px
    line-height: 50px;

    position: absolute;
    top: 12px;
    left: 12px;

    width: 50px;
    height: 50px;

    text-align: center;

    border: 1px solid #999;
    border-radius: 50%;
    background: rgba(0,0,0, .2);
    box-shadow: 0 0 10px #fff;
    text-shadow: 0 1px 0 #fff;

    disabled();
}
