.hint {
    font-size: 20px
    line-height: 40px;

    position: absolute;
    bottom: 12px;
    left: 12px;

    width: 40px;
    height: 40px;

    cursor: pointer;
    transition: all 1s;
    text-align: center;

    border: 1px solid #999;
    border-radius: 50%;
    background: rgba(255,200,0, 1);
    text-shadow: 0 1px 0 #fff;

    transform-style: preserve-3d;
    backface-visibility: hidden;

    &:after {
        position: absolute;
        top: 0;
        left: 0;

        width: 40px;
        height: 40px;

        content: 'x'
        transform: rotateY(-180deg);

        border: 1px solid #999;
        border-radius: 50%;
        background: #fff;

        backface-visibility: hidden;
    }

    &_actived {
        transform: rotateY(180deg);
    }

    disabled();
}
