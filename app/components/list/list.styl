.list {
    font-size: 18px
    line-height: 24px;

    position: absolute;
    right: 12px;
    bottom: 24px;

    opacity: 1;
    transition: all .3s ease-in
    transform: translateY(0);

    &__wrapper {
        position: relative;
        max-height: 80px;

        overflow: hidden;

        &:after {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;

            content: '';

            height: 60%;
            background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1) 100%);
        }
    }

    island();

    &__items,
    &__item {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    &__item {
        height: 24px;
        white-space: nowrap;
        text-overflow ellipsis;

        color: #888;

        user-select: none;

        &:first-child {
            font-weight: bold;

            color: #000;
        }
    }

    &_hide {
        opacity: 0;
        transform: translateY(10px);
    }
}
