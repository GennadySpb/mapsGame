.list {
    font-size: 18px
    line-height: 24px;

    position: absolute;
    right: 12px;
    bottom: 24px;

    transition: all .3s ease-in
    transform: translateY(0);

    opacity: 1;

    &__wrapper {
        position: relative;

        overflow: hidden;

        max-height: 80px;

        &:after {
            position: absolute;
            right: 0;
            bottom: 0;
            left: 0;

            height: 60%;

            content: '';

            background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1) 100%);
        }
    }

    &__items,
    &__item {
        margin: 0;
        padding: 0;

        list-style: none;
    }

    &__item {
        height: 24px;

        white-space: nowrap;

        color: #888;

        user-select: none;

        &:first-child {
            font-weight: bold;

            color: #000;
        }
        text-overflow ellipsis;
    }

    &_hide {
        transform: translateY(10px);

        opacity: 0;
    }

    island();
}
